{
  "rules": {
    "newline-before-return": ["error"],
    "newline-after-var": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "promise/always-return": 0,
    "node/shebang": 0,
    "no-console": 0,
    "no-process-exit": 0
  },
  "extends": [
    "plugin:shopify/esnext",
    "plugin:shopify/node",
    "plugin:shopify/mocha"
  ]
}
